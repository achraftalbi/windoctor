<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity MailSetting.
    -->
    <changeSet id="20151115134200" author="jhipster">
        <createTable tableName="mail_setting">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="activated" type="bit"/>
            <column name="structure_id" type="bigint"/>
            <column name="mail_type_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="structure_id"
                                 baseTableName="mail_setting"
                                 constraintName="fk_mailsetting_structure_id"
                                 referencedColumnNames="id"
                                 referencedTableName="structure"/>

        <addForeignKeyConstraint baseColumnNames="mail_type_id"
                                 baseTableName="mail_setting"
                                 constraintName="fk_mailsetting_mail_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="mail_type"/>
        <addUniqueConstraint
            columnNames="mail_type_id, structure_id"
            constraintName="unique_mail_structure"
            tableName="mail_setting"
            />

    </changeSet>
</databaseChangeLog>
